<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.communify.domain.file.dao.FileRepository">
    <resultMap id="fileInfoResultMap" type="FileInfo">
        <result property="storedFilename" column="stored_filename"/>
        <result property="originalFilename" column="original_filename"/>
        <result property="extension" column="extension"/>
        <result property="postId" column="post_id"/>
        <result property="sequence" column="sequence"/>
    </resultMap>

    <insert id="insertFileInfoList" keyProperty="storedFilename">
        INSERT INTO file(stored_filename, original_filename, extension, post_id, sequence) VALUES
        <foreach collection="list" item="fileInfo" index="idx" separator=",">
            (#{fileInfo.storedFilename}, #{fileInfo.originalFilename}, #{fileInfo.extension}, #{fileInfo.postId}, #{fileInfo.sequence})
        </foreach>
    </insert>

    <select id="findAllByPostId" resultMap="fileInfoResultMap">
        SELECT *
        FROM file
        WHERE post_id = #{postId}
    </select>

    <delete id="deleteAll">
        DELETE
        FROM file
        WHERE post_id = #{postId}
    </delete>
</mapper>
