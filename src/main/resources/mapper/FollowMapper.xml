<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.communify.domain.follow.dao.FollowRepository">
    <resultMap id="memberInfoResultMap" type="MemberInfo">
        <result property="id" column="id"/>
        <result property="email" column="email"/>
        <result property="hashed" column="hashed"/>
        <result property="name" column="name"/>
        <result property="createdDateTime" column="created_timestamp"/>
        <result property="modifiedDateTime" column="modified_timestamp"/>
        <result property="followed" column="followed"/>
        <result property="following" column="following"/>
        <result property="isFollowing" column="is_following"/>
        <result property="fcmToken" column="fcm_token"/>
    </resultMap>

    <insert id="insertFollow">
        INSERT INTO follow(follower_id, followed_id)
        VALUES (#{request.folloerId}, #{request.followedId})
    </insert>

    <delete id="deleteFollow">
        DELETE
        FROM follow
        WHERE follower_id = #{request.followerId}
          AND followed_id = #{request.followedId}
    </delete>

    <select id="findFollowers" resultMap="memberInfoResultMap">
        SELECT m.id,
               m.name,
               ft.fcm_token,
               IF(f2.follower_id IS NOT NULL, TRUE, FALSE) AS is_following
        FROM member m
                 INNER JOIN follow f1 ON m.id = f1.follower_id
                 LEFT OUTER JOIN fcm_token ft ON m.id = ft.member_id
                 LEFT OUTER JOIN follow f2 ON m.id = f2.followed_id AND f2.follower_id = #{followedId}
        WHERE f1.followed_id = #{followedId}
    </select>

    <select id="findFollowings" resultMap="memberInfoResultMap">
        SELECT m.id, m.name
        FROM member m
                 INNER JOIN follow f ON m.id = f.followed_id
        WHERE f.follower_id = #{followerId}
    </select>
</mapper>
